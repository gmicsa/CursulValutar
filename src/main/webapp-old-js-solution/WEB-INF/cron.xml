<?xml version="1.0" encoding="UTF-8"?>
<cronentries>
    <cron>
        <url>/services/fetch</url>
        <description>Fetch data from all registered banks</description>
        <schedule>every 2 hours from 08:00 to 18:00</schedule>
        <timezone>Europe/Bucharest</timezone>
    </cron>
    <cron>
        <url>/services/alerts</url>
        <description>Send alerts to users</description>
        <schedule>every day 14:10</schedule>
        <timezone>Europe/Bucharest</timezone>
    </cron>
    <cron>
        <url>/services/poll</url>
        <description>Keep the service up and running</description>
        <schedule>every 10 minutes from 08:00 to 22:00</schedule>
        <timezone>Europe/Bucharest</timezone>
    </cron>
</cronentries>